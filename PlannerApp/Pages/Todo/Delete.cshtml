@page "{id:int}"
@model TodoApp.Pages.Todo.DeleteModel

@{
    ViewData["Title"] = "Delete To-Do Item";
}

<h1>@ViewData["Title"]</h1>

<h3>Are you sure you want to delete this to-do?</h3>

<div>
    <!-- Display the Title of the item to confirm which one is being deleted -->
    <h4>@Model.TodoItem.Title</h4>
    <p>
        <strong>Completed?</strong> @(Model.TodoItem.IsDone ? "Yes" : "No")
    </p>
</div>

<!-- Form method="post" posts back to /Todo/Delete?id=<id> -->
<form method="post">
    <!-- Hidden input holds the Id so OnPostAsync knows which record to delete -->
    <input type="hidden" asp-for="TodoItem.Id" />

    <!-- Confirm and Cancel buttons -->
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
